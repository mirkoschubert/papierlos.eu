include /atoms/picture
include /atoms/button

//-
  data = { title, excerpt, to, image { slug, alt, author, url } }

mixin card(data)
  .item.card
    .image
      +picture(data.image.slug, data.image.alt, data.image.author, data.image.url)
    h4
      a(href=data.to)= data.title
    p= data.excerpt
